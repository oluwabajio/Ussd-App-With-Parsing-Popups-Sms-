<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.MainFragment"
    android:background="#ffffff">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".MainActivity"
        android:orientation="horizontal"
        tools:showIn="@layout/activity_main">

        <LinearLayout
            android:id="@+id/Sim1Layout"
            android:layout_weight="50"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentPaddingLeft="18dp"
                app:contentPaddingRight="18dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="7dp"
                app:cardBackgroundColor="@color/colorPrimary"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                >

                <TextView
                    android:id="@+id/tv_sim1network"
                    android:layout_gravity="center"
                    android:textSize="18dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="#fff"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="30dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="10dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_margin="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Balance Balance"
                        android:textColor="#000000"/>

                    <ImageView
                        android:id="@+id/ref_AirtimeSim1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/ic_refresh_page_option"/>

                    <TextView
                        android:id="@+id/tv_AirtimeSim1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:textColor="#000000"
                        android:textSize="25dp"
                        android:text="--"/>


                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="20dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_margin="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data Balance"
                        android:textColor="#000000"/>


                    <ImageView
                        android:id="@+id/ref_DataSim1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/ic_refresh_page_option"/>


                    <TextView
                        android:id="@+id/tv_DataSim1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:textColor="#000000"
                        android:textSize="30dp"
                        android:text="--"/>




                </RelativeLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/Sim2Layout"
            android:layout_weight="50"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                android:id="@+id/cardvieww"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentPaddingLeft="18dp"
                app:contentPaddingRight="18dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="7dp"
                app:cardBackgroundColor="@color/colorPrimary"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="20dp"
                android:paddingBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                >

                <TextView
                    android:id="@+id/tv_sim2network"
                    android:layout_gravity="center"
                    android:textSize="18dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="#fff"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="10dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_margin="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Balance Balance"
                        android:textColor="#000000"/>


                    <ImageView
                        android:id="@+id/ref_AirtimeSim2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/ic_refresh_page_option"/>

                    <TextView
                        android:id="@+id/tv_AirtimeSim2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:textColor="#000000"
                        android:textSize="25dp"
                        android:text="--"/>


                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_margin="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data Balance"
                        android:textColor="#000000"/>


                    <ImageView
                        android:id="@+id/ref_DataSim2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/ic_refresh_page_option"/>

                    <TextView
                        android:id="@+id/tv_DataSim2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:textColor="#000000"
                        android:textSize="30dp"
                        android:text="--"/>


                </RelativeLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>

    </LinearLayout>


</FrameLayout>