<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/_6sdp"
    android:paddingBottom="@dimen/_6sdp"
    android:paddingLeft="@dimen/_10sdp"
    android:paddingRight="@dimen/_10sdp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:paddingLeft="@dimen/_5sdp"
        >

        <TextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sim1 Airtime"
            android:textStyle="bold"
            android:textColor="#ff0000"
            android:textSize="@dimen/_10sdp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            style="@style/TextAppearance.Compat.Notification.Title"/>
        <TextView
            android:id="@+id/tv_airtime_sim1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Airtime: --"
            android:textColor="#000000"
            android:textSize="@dimen/_10sdp"
            android:layout_below="@+id/title1"
            style="@style/TextAppearance.Compat.Notification.Title"
            />
        <TextView
            android:id="@+id/tv_data_sim1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data:  -- "
            android:textColor="#000000"
            android:textSize="@dimen/_10sdp"
            android:layout_below="@+id/tv_airtime_sim1"
            style="@style/TextAppearance.Compat.Notification.Title"
            />
        <ImageButton
            android:id="@+id/btnSim1Airtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/refresh_black_36x36"
            android:layout_alignParentEnd="true"
            android:background="#ffffff"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>


    </RelativeLayout>
    <RelativeLayout
        android:paddingLeft="@dimen/_5sdp"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff0000"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            android:text="Sim2 Airtime"/>
        <TextView
            android:id="@+id/tv_airtime_sim2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Used Today: --"
            android:textColor="#000000"
            android:textSize="@dimen/_10sdp"
            android:layout_below="@+id/title2"
            style="@style/TextAppearance.Compat.Notification.Title"
            />
        <TextView
            android:id="@+id/tv_data_sim2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remaining: --"
            android:textColor="#000000"
            android:textSize="@dimen/_10sdp"
            android:layout_below="@+id/tv_airtime_sim2"
            style="@style/TextAppearance.Compat.Notification.Title"
            />
        <ImageButton
            android:id="@+id/btnSim2Airtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/refresh_black_36x36"
            android:layout_alignParentEnd="true"
            android:background="#ffffff"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</LinearLayout>