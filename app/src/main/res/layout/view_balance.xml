<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        card_view:cardCornerRadius="@dimen/_20sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_margin="@dimen/_10sdp"
                android:src="@drawable/history"

                />

            <TextView
                android:id="@+id/tv_serviceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_logo"
                android:layout_alignTop="@+id/img_logo"
                android:text="Service Name"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_amount"
                android:layout_toRightOf="@+id/img_logo"
                android:layout_alignLeft="@+id/tv_serviceName"

                android:text="Title"
                android:textColor="#000000"
                android:layout_below="@+id/tv_serviceName"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:layout_alignStart="@+id/tv_title"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_alignRight="@+id/tv_title"

                android:layout_toLeftOf="@+id/tv_sim"
                android:layout_alignLeft="@+id/tv_serviceName"
                android:text="12-23-2019"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_15sdp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="#1000" />

            <TextView
                android:id="@+id/tv_sim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/tv_date"
                android:layout_marginRight="@dimen/_15sdp"
                android:text="mtn"

                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>